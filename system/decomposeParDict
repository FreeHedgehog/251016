FoamFile
{
    version     2.0;
    format      ascii;

    class       dictionary;
    location    "system";
    object      decomposeParDict;
}

/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */

numberOfSubdomains 128;


method          simple;


simpleCoeffs
{
    n               (16 4 2);
    delta           0.001;
}


hierarchicalCoeffs
{
    n               (16 4 2);
    delta           0.001;
    order           xyz;
}


metisCoeffs
{
    processorWeights ( );
}


scotchCoeffs
{
    processorWeights ( );
    writeGraph      false;
    strategy        "b";
}

manualCoeffs
{
    dataFile        "";
}

distributed     no;

roots           ( );

